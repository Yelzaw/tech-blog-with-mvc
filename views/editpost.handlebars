


<div class="row">
  <div class="col-auto">
    <h2>Edit Your Post</h2>
  </div>
</div>
{{!-- Update the existing post --}}
<form class="edit-post-form" data-note="{{id}}">
    <label for="title">Title:</label>
    <br />
    <textarea id="title" name="title" rows="2" cols="100">{{title}}</textarea>
    <br />
    <label for="content">Content:</label>
    <br />
    <textarea id="content" name="content" rows="5" cols="100">{{post}}</textarea>
    <br />
    <button type="submit" value="Submit">
      Update Post
    </button>
    {{!-- Delete the post --}}
    <button style="margin-left:10px" class="btn-secondary btn-sm btn-danger del-post" data-id="{{id}}">DELETE</button>
</form>


<script src="../js/editpost.js"></script>

