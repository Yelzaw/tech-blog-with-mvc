<div class="row mb-4 project">
  <div class="col-md-12">
    <h2>
      <a href="/post/{{id}}">{{title}}</a>
    </h2>
    <div class="col">
    <p>
      {{post}}
    </p>
  </div>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>  
</div>
<div class="container container-fluid mt-8">
  <div class="col-md-12">
    <h6>      Comments    </h6><br>
{{#each comments as |comment|}}

    <div class="row mb-3 post-style" style="background-color: lightgray;">
      <li class="col-9">{{comment.comment}}</li> 
      <div class="col-3">Posted by {{comment.user_name}} on {{format_date comment.date_created}}</div>
    </div>
{{/each}}
  </div>  
</div>
{{#if logged_in}}
    <form class="form new-comment-form" data-id="{{id}}">      
      <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea class="form-input" id="comment" name="comment" placeholder="Add your comment here."></textarea>
      </div>
      <div class="form-group">
        <button type="submit"  class="btn btn-primary">Submit</button>
      </div>
    </form>
{{/if}}

<script src="../js/comment.js"></script>